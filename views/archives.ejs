<%- include('segment/header') %>

<div class="ui grid">
    <% archives.forEach(function(item) { %>
        <div class="row">
            <div class="four wide column right aligned">
                <h2 class="archives year_month"><%= item.yearMonth %></h2>
            </div>
            <div class="twelve wide column">
                <div class="ui list">
                    <% item.titles.forEach(function(title) { %>
                        <div class="item">
                            <span class="archives created_at"><%= title.created_at %></span>
                            <a class="item archives" href="/posts/<%= title._id %>"><%= title.title %></a>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    <% }) %>
    <div class="row"> </div>
</div>

<%- include('segment/footer') %>
